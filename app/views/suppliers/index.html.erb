


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold">Publisher</h1>

    <%= link_to new_supplier_path, class: button_class(theme: "primary") do %>
    Add New Publisher
    <% end %>
  </div>

  <table class="table-auto border-collapse border-slate-400 w-full" style="background-color: #C3F0E9">
    <thead class="bg-slate-50 dark:bg-slate-700">
      <tr>
      <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Name</th>

              <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Address</th>
              <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Phone</th>
              <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Email</th>
              <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left"></th>

                
      </tr>
    </thead>

    <tbody>
      <% @suppliers.each do |supplier| %>
      <%= content_tag :tr, id: dom_id(supplier), class: dom_class(supplier) do %>
      

      <td class="border border-slate-300 dark:border-12B1BB-700 p-4 text-slate-500 dark:text-12B1BB-400"><%= link_to supplier.name, supplier %></td>

              <td class="border border-slate-300 dark:border-12B1BB-700 p-4 text-slate-500 dark:text-12B1BB-1500"><%= supplier.address %></td>
              <td class="border border-slate-300 dark:border-12B1BB-700 p-4 text-slate-500 dark:text-12B1BB-1500"><%= supplier.phone %></td>
              <td class="border border-slate-300 dark:border-12B1BB-700 p-4 text-slate-500 dark:text-12B1BB-1500"><%= supplier.email %></td>
              
              <td class="border border-slate-300 dark:border-12B1BB-700 p-4 text-slate-500 dark:text-12B1BB-1500"><%= link_to 'Show', supplier%></td>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
